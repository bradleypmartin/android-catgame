<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/card1"
        android:layout_width="100dp"
        android:layout_height="160dp"
        app:srcCompat="@drawable/card"
        app:layout_constraintTop_toTopOf="@+id/card2"
        app:layout_constraintRight_toLeftOf="@+id/card2"
        android:layout_marginRight="20dp" />

    <ImageView
        android:id="@+id/card2"
        android:layout_width="100dp"
        android:layout_height="160dp"
        app:srcCompat="@drawable/card"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp" />

    <ImageView
        android:id="@+id/card3"
        android:layout_width="100dp"
        android:layout_height="160dp"
        app:srcCompat="@drawable/card"
        app:layout_constraintTop_toTopOf="@+id/card2"
        app:layout_constraintLeft_toRightOf="@+id/card2"
        android:layout_marginLeft="20dp" />

    <Button
        android:id="@+id/shuffleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reshuffle Cards"
        app:layout_constraintTop_toBottomOf="@+id/card2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="70dp" />

    <TextView
        android:id="@+id/meowText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap a card to find the kitty..."
        app:layout_constraintTop_toBottomOf="@+id/card2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp" />

</android.support.constraint.ConstraintLayout>